<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="116dp"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dispay_subject"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_toEndOf="@+id/display_monthyear"
                android:layout_toRightOf="@+id/display_monthyear"
                android:text="Subject"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dispay_details"
                android:layout_width="278dp"
                android:layout_height="51dp"
                android:layout_below="@+id/dispay_subject"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/display_monthyear"
                android:layout_toRightOf="@+id/display_monthyear"
                android:text="Details"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="74dp"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/display_monthyear"
                android:layout_toRightOf="@+id/display_monthyear"
                android:text="Subject:"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/display_monthyear"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_below="@+id/display_day"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:gravity="center"
                android:text="09/2020"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/display_day"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/colorPrimary"
                android:textSize="45sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>